{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es7", "dom"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
